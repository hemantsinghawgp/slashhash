<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container p-5">
      <h1>Favorites</h1>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <% favorites.forEach(favorite => { %>
            <div class="col-sm-3">
              <div class="card p-3 my-2">
                <img src="<%= favorite.poster %>" alt="<%= favorite.title %>" />
                <h2><%= favorite.title %> (<%= favorite.year %>)</h2>
                <p><%= favorite.type %></p>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
